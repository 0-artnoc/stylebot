{
	"name":"Stylebot",
	"version":"0.1",
	"description":"Adapt the web's appearance.",
	"background_page":"background.html",
	
	"content_scripts":[
	{
		"matches":["http://*/*", "https://*/*"],
		
		"css":[
			"css/main.css",
			"css/widget.css",
			"css/Aristo/aristo.css",
			"css/colorpicker.css",
			"css/scrollbars.css"
		],
		
		"js":[
			"js/jquery.js",
			"js/jquery-ui.js",
			"js/main.js",
			"js/chrome.js",
			"js/widget.js",
			"js/widget.ui.js",
			"js/widget.ui.events.js",
			"js/selector.js",
			"js/style.js",
			"js/modal.js",
			"js/utils.js",
			"js/colorpicker.js",
			"js/jquery.lint.js"
		],
		
		"run_at":"document_start",
		"all_frames":true
	}],
	
	"page_action": {
		"default_icon": "images/icon19_off.png",
		"default_title": "Click to turn CSS editing on"
	},
	
	"permissions": ["tabs"]
}
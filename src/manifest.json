{
  "manifest_version": 2,
  "name": "Stylebot",
  "version": "2.4.1",
  "description": "Change the appearance of websites instantly.",

  "background": {
    "scripts": ["background/index.js"]
  },

  "options_page": "options/index.html",

  "content_scripts": [
    {
      "all_frames": true,
      "js": [
        "editor/index.js",
        "monaco-editor/iframe/node_modules/requirejs/require.js",
        "monaco-editor/iframe/node_modules/monaco-editor/min/vs/loader.js"
      ],
      "matches": ["<all_urls>"],
      "run_at": "document_idle"
    },
    {
      "all_frames": true,
      "js": ["inject-css/index.js"],
      "matches": ["<all_urls>"],
      "run_at": "document_start"
    }
  ],

  "browser_action": {
    "default_icon": {
      "19": "img/css.png",
      "38": "img/css@2x.png"
    },

    "default_title": "Stylebot",
    "default_popup": "popup/index.html"
  },

  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },

  "permissions": ["tabs", "contextMenus", "storage", "unlimitedStorage"],
  "web_accessible_resources": [
    "editor/index.css",
    "readability/index.css",
    "monaco-editor/*"
  ]
}

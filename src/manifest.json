{
  "manifest_version": 2,
  "name": "Stylebot",
  "version": "2.4.1",
  "description": "Change the appearance of websites instantly.",

  "background": {
    "scripts": ["background.js"]
  },

  "options_page": "options/index.html",

  "content_scripts": [
    {
      "all_frames": true,
      "js": ["editor.js"],
      "css": ["editor.css"],
      "matches": ["<all_urls>"],
      "run_at": "document_idle"
    },
    {
      "all_frames": true,
      "js": ["inject-css.js"],
      "matches": ["<all_urls>"],
      "run_at": "document_start"
    }
  ],

  "browser_action": {
    "default_icon": {
      "19": "images/css.png",
      "38": "images/css@2x.png"
    },

    "default_title": "Stylebot",
    "default_popup": "popup/index.html"
  },

  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },

  "permissions": [
    "tabs",
    "contextMenus",
    "notifications",
    "storage",
    "unlimitedStorage",
    "<all_urls>"
  ]
}

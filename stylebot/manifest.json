{
  "manifest_version": 2,
  "name"            : "Stylebot",
  "version"         : "1.7.3.4",
  "description"     : "Adapt the web's appearance",

  "background" : {
    "scripts": [
      "js/background/updates.js",
      "js/background/pageaction.js",
      "js/background/contextmenu.js",
      "js/background/styles.js",
      "js/background/string.js",
      "js/background/background.js"
    ]
  },

  "options_page"    : "options.html",

  "content_scripts": [{
    "matches": ["<all_urls>"],

    "js": [
      "js/libs/css-utils.js",
      "js/apply-css.js"
    ],

    "run_at": "document_start",
    "all_frames": true
  },

  {
    "matches": ["http://userstyles.org/styles/*"],

    "js": [
      "js/libs/css-utils.js",
      "js/userstyles-org.js"
    ],

    "run_at": "document_start",
    "all_frames": true
  },

  {
    "matches": ["http://stylebot.me/*"],

    "js": [
      "js/installation.js"
    ],

    "run_at": "document_end",
    "all_frames": true
  },

  {
    "matches": ["<all_urls>"],

    "css": [
      "css/widget.css",
      "css/controls.css",
      "css/modal.css",
      "css/colorpicker.css",
      "css/scrollbars.css",
      "css/tipsy.css",
      "css/shortcuts_help.css",
      "css/ace_editor.css",
      "css/preview.css",
      "css/selectize.css"
    ],

    "js": [
      "js/libs/jquery.js",
      "js/stylebot.js",
      "js/chrome.js",
      "js/init.js",
      "js/widget.js",
      "js/widget.basic.js",
      "js/events.js",
      "js/widget.advanced.js",
      "js/widget-ui.js",
      "js/style.js",
      "js/page.js",
      "js/contextmenu.js",
      "js/undo.js",
      "js/libs/selectorGenerator.js",
      "js/libs/selectionBox.js",
      "js/libs/modalbox.js",
      "js/libs/utils.js",
      "js/libs/colorpicker.js",
      "js/libs/jquery.tipsy.js",
      "js/libs/parser.js",
      "js/libs/ace.js",
      "js/libs/mode-css.js",
      "js/libs/theme-dawn.js",
      "js/libs/selectize.js",
      "js/shortcuts.js"
    ],

    "run_at": "document_start",
    "all_frames": true
  }],

  "page_action": {
    "default_icon"  : "images/css.png",
    "default_title" : "Click to start editing using Stylebot",
    "default_popup" : "pageaction/index.html"
  },

  "icons": {
    "16"  : "images/icon16.png",
    "48"  : "images/icon48.png",
    "128" : "images/icon128.png"
  },

  "permissions": [
    "tabs",
    "bookmarks",
    "contextMenus",
    "notifications",
    "storage",
    "http://userstyles.org/",
    "unlimitedStorage",
    "http://stylebot.me/",
    "<all_urls>"
  ]
}
